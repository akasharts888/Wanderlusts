<% layout("/Layouts/BoilerPlate") %>
<div class="row mt-3 Add-panel">
    <div class="col-8 offset-2">
        <h1>Create a New Listing</h1>
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter Title" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Description</label>
                <textarea type="text" name="listing[description]"  placeholder="Enter Description" class="form-control" required></textarea>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="row">
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" name="listing[image]" placeholder="Enter image URL/Link" class="form-control" required>
                    <div class="invalid-feedback">Please enter correct Image Link!</div>
                </div>
                <div class="mb-3 col-md-4">
                    <label for="title" class="form-label">Price</label>
                    <input type="text" name="listing[price]" placeholder="Enter Price" class="form-control" required>
                    <div class="invalid-feedback">Please enter correct price!</div>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="title" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control" required>
                    <div class="invalid-feedback">Please enter correct Country Name!</div>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" required>
                <div class="invalid-feedback">Please enter correct Location!</div>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <button class="btn btn-dark mt-3 add-btn">Add</button>
            <!-- <input type="submit" placeholder="Add Data"> -->
        </form>
    </div>
</div>