<% layout("/Layouts/BoilerPlate") %>
<div class="row mt-3 Add-panel">
    <div class="col-8 offset-2">
        <h1>Login On WanderLust</h1>
        <form action="/login" method = "post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter Username" class="form-control" id="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password"  placeholder="Enter Password" class="form-control"  id="username" required></input>
            </div>
            <button class="btn btn-success">Log In</button>
        </form>
    </div>
</div>